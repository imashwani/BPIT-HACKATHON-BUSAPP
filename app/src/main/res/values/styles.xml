<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewDetails">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="image_home">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="cradview_home">
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="game_text">
        <item name="android:layout_gravity">center_vertical|center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="cradview_game">
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Base application theme. -->

    <style name="AppTheme.NoActionBar" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">#002b6e</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="Base.ThemeOverlay.AppCompat.Light" />


    <style name="customBlackBigText">
        <item name="android:layout_marginLeft">50px</item>
        <item name="android:textAlignment">center</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>/>
    </style>

    <style name="grayText">
        <item name="android:layout_marginLeft">50px</item>
        <item name="android:textSize">6pt</item>
        <item name="android:textAlignment">center</item>
        <!--<item name="android:typeface">monospace</item>-->
        <!--<item name="android:font" tools:targetApi="o">@font/opensans_regular</item>-->
        <item name="android:textColor">#848682</item>
    </style>
</resources>
